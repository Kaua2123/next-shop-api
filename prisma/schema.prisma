generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  ADMIN
}

enum Sizes {
  P
  M
  G
  GG
}

enum Category {
  ELETRONICOS
  ESTILO
  LIVROS
  FERRAMENTAS
  JOGOS
}

model User {
  id       Int    @id @default(autoincrement()) // autoincrement. 1, 2, 3...
  name     String
  email    String @unique
  password String
  role     Role   @default(CLIENT)

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  stock       Int
  image_url   String
  sizes       Sizes
  category    Category
  created_at  DateTime @default(now())

  @@map("products")
}
